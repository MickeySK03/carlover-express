// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int           @id @default(autoincrement())
  username String        @unique
  password String
  role     Role          @default(USER)
  wishList WishListCar[]
  reserve  ReserveCar[]
}

model Car {
  id           Int           @id @default(autoincrement())
  brand        String
  model        String
  price        String
  year         String
  color        String
  mileage      String
  fuelType     String
  transmission String
  driveTrain   String
  seat         String
  location     String
  description  String
  image        String
  createAt     DateTime      @default(now())
  isReserve    Boolean       @default(false)
  reservePrice String
  reserveCar   ReserveCar[]
  wishListCar  WishListCar[]
  imageCar     ImageCar[]
}

model ImageCar {
  id    Int    @id @default(autoincrement())
  image String
  carId Int
  car   Car    @relation(fields: [carId], references: [id])
}

model WishListCar {
  id     Int  @id @default(autoincrement())
  userId Int
  user   User @relation(fields: [userId], references: [id])
  carId  Int
  car    Car  @relation(fields: [carId], references: [id])
}

model ReserveCar {
  id        Int           @id @default(autoincrement())
  userPhone String
  createAt  DateTime      @default(now())
  status    ReserveStatus
  image     String
  userId    Int
  user      User          @relation(fields: [userId], references: [id])
  carId     Int
  car       Car           @relation(fields: [carId], references: [id])
}

enum ReserveStatus {
  Reserved
  Pending
  NotReserve
  Cancel
}

enum Role {
  USER
  ADMIN
}
